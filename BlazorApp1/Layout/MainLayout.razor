@inherits LayoutComponentBase
@using BlazorApp1.Services
@inject AppState appState

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (appState.IsAuthenticated)
            {
                <a href="/Logout">Logout</a> 
            }
            else
            {
                <a href="/Login">Login</a> 
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
